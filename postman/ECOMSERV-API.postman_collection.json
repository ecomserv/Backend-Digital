            "url": "{{baseUrl}}/api/quotes/COT-0001"
          }
        },
        {
          "name": "Send Quote by Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"toEmail\": \"cliente@email.com\",\n  \"documentNumber\": \"COT-0001\",\n  \"clientName\": \"Empresa Demo\",\n  \"attachPdf\": true\n}"
            },
            "url": "{{baseUrl}}/api/quotes/send-email"
          }
        }
      ]
