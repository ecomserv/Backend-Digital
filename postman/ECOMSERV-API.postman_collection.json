              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currency\": \"PEN\",\n  \"clientName\": \"Empresa Demo S.A.C.\",\n  \"clientRuc\": \"20123456789\",\n  \"clientAddress\": \"Av. Principal 123, Lima\",\n  \"clientPhone\": \"01-1234567\",\n  \"clientEmail\": \"contacto@empresa.com\",\n  \"vendedor\": \"Juan Pérez\",\n  \"items\": [\n    {\n      \"code\": \"PROD-001\",\n      \"description\": \"Producto de ejemplo\",\n      \"unitMeasure\": \"UND\",\n      \"quantity\": 10,\n      \"unitPrice\": 50.00\n    }\n  ],\n  \"paymentCondition\": \"50% adelanto, 50% contra entrega\",\n  \"deliveryTime\": \"15 días hábiles\",\n  \"warranty\": \"12 meses\"\n}"
            },
            "url": "{{baseUrl}}/api/quotes/generate"
          }
        },
